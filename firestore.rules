    // firestore.rules - suggested rules for local record
// Paste the contents below into Firebase Console → Firestore → Rules and publish.

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- COLEÇÃO PRINCIPAL: love_pages ---
    match /love_pages/{pageId} {
      allow read: if resource.data.isPublished == true
                  || (request.auth != null && resource.data.userId == request.auth.uid);
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.views == 0
                    && request.resource.data.likes == 0
                    && request.resource.data.createdAt is timestamp;
      allow update: if (
                        request.auth != null
                        && resource.data.userId == request.auth.uid
                        && request.resource.data.views == resource.data.views
                        && request.resource.data.likes == resource.data.likes
                      )
                    || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views'])
                    || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;

      match /likes/{userId} {
        allow create: if request.auth != null
                      && request.auth.uid == userId
                      && !exists(/databases/$(database)/documents/love_pages/$(pageId)/likes/$(userId))
                      && request.resource.data.keys().hasOnly(['likedAt', 'userId'])
                      && request.resource.data.userId == request.auth.uid;
        allow read, update, delete: if false;
      }
    }

    // --- COLEÇÃO users ---
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    match /users/{userId}/history/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/achievements/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/simulations/{simulationId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    match /analytics/{analyticsId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // --- rooms collection (real-time matches) ---
    match /rooms/{roomId} {
      allow read: if true;

      allow create: if request.auth != null
                    && request.resource.data.hostId == request.auth.uid
                    && request.resource.data.players[request.auth.uid].uid == request.auth.uid;

      allow update: if request.auth != null && (
        // existing player updating only their submap (answers, isReady, isConnected)
        (
          resource.data.players[request.auth.uid] != null
          && request.resource.data.players[request.auth.uid].uid == request.auth.uid
        )
        // host updating game-flow fields
        || (resource.data.hostId == request.auth.uid
            && (
              request.resource.data.status is string
              || request.resource.data.currentQuestion is int
              || request.resource.data.questionStartedAt is timestamp
              || request.resource.data.finishedAt is timestamp
            )
        )
        // new player joining while room is waiting — allow adding own player entry (supports dot-path updates)
        || (
          resource.data.status == 'waiting'
          && request.resource.data.players[request.auth.uid].uid == request.auth.uid
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['players'])
        )
      );

      allow delete: if request.auth != null && resource.data.hostId == request.auth.uid;
    }

    // --- NOVA COLEÇÃO PARA TESTES DA IA ---
    match /conversations/{docId} {
      allow read, write: if true;
    }

    // --- COLEÇÃO COMUNIDADE: Atividades Comunitárias ---
    match /communityActivity/mentor/{userId}/{docId} {
      allow read: if true;
      allow create, write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    match /communityActivity/submittedQuestions/{docId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.question is string
                    && request.resource.data.options is list
                    && request.resource.data.correctAnswer is int
                    && request.resource.data.subject is string
                    && request.resource.data.timestamp is timestamp;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'likes', 'dislikes']);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /communityActivity/feedbacks/{docId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.questionId is string
                    && request.resource.data.feedbackText is string
                    && request.resource.data.rating is int
                    && request.resource.data.timestamp is timestamp;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['helpful']);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- COLEÇÃO MENTORSHIP: Sessões e Chat de Mentoria ---
    match /mentorshipSessions/{sessionId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.studentId == request.auth.uid
                    && request.resource.data.startedAt is timestamp;
      allow update: if request.auth != null
                    && (resource.data.studentId == request.auth.uid || resource.data.mentorId == request.auth.uid);
      // Prevent unilateral deletion by mentor — only the student may delete a mentorship session.
      // This avoids data loss when a mentor removes a session while the student still needs access.
      allow delete: if request.auth != null && resource.data.mentorId == request.auth.uid;

      // Mensagens dentro de cada sessão
      match /messages/{msgId} {
        allow read: if request.auth != null
                    && (get(/databases/$(database)/documents/mentorshipSessions/$(sessionId)).data.studentId == request.auth.uid
                        || get(/databases/$(database)/documents/mentorshipSessions/$(sessionId)).data.mentorId == request.auth.uid);
        // TEMP: permitir criação para qualquer usuário autenticado (remoção temporária da checagem senderId/get)
        // Use this only para depuração — depois devemos restringir novamente.
        allow create: if request.auth != null && request.resource.data.text is string && request.resource.data.timestamp is timestamp;
        allow update, delete: if false;
      }
    }

    // --- COLEÇÃO mentorshipChats: Mensagens de Chat de Mentoria ---
    match /mentorshipChats/{sessionId} {
      allow read: if true;

      match /messages/{msgId} {
        allow read: if true;
        // TEMP: permitir criação para qualquer usuário autenticado (remoção temporária da checagem senderId)
        // Use this only para depuração — depois devemos restringir novamente.
        allow create: if request.auth != null && request.resource.data.text is string && request.resource.data.timestamp is timestamp;
        allow update, delete: if false;
      }
    }

    // --- COLEÇÃO DISCUSSIONS: Fórum de Discussão ---
    match /discussions/{docId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.authorId == request.auth.uid
                    && request.resource.data.authorName is string
                    && request.resource.data.title is string
                    && request.resource.data.description is string
                    && request.resource.data.subject is string
                    && request.resource.data.createdAt is timestamp
                    && request.resource.data.views == 0
                    && request.resource.data.replies == 0
                    && request.resource.data.likes == 0;
      allow update: if request.auth != null && (
                      // Qualquer usuário pode atualizar likes, views, replies
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'views', 'replies'])
                      || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
                      || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views'])
                      || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['replies'])
                      // Apenas o autor pode pinnar/despinnar
                      || (resource.data.authorId == request.auth.uid 
                          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isPinned']))
                    );
      allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;

      match /replies/{replyId} {
        allow read: if true;
        allow create: if request.auth != null
                      && request.resource.data.authorId == request.auth.uid
                      && request.resource.data.authorName is string
                      && request.resource.data.text is string
                      && request.resource.data.createdAt is timestamp
                      && request.resource.data.likes == 0
                      && request.resource.data.helpful == false;
        allow update: if request.auth != null && (
                        // Qualquer usuário pode dar like
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
                        // Autor da reply pode atualizar likes e helpful
                        || (resource.data.authorId == request.auth.uid
                            && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'helpful']))
                        // Autor da discussão pai pode marcar como helpful
                        || (get(/databases/$(database)/documents/discussions/$(docId)).data.authorId == request.auth.uid
                            && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['helpful']))
                      );
        allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;
      }
    }
  }
}
